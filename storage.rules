rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /characters/{userId}/{allPaths=**} {
      // Lecture : tout le monde peut voir les images
      allow read: if true;

      // Écriture : seulement l'admin
      allow write: if request.auth != null &&
                      request.auth.token.email == 'antho.pruneta@gmail.com';
    }

    // Config d'équilibrage (page Admin) : lecture pour tous (chargement de l'app), écriture admin uniquement
    match /gameConfig/{fileName} {
      allow read: if true;
      allow write: if request.auth != null &&
                      request.auth.token.email == 'antho.pruneta@gmail.com';
    }
  }
}
